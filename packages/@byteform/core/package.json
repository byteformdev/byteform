{
    "name": "@byteform/core",
    "version": "0.0.1",
    "description": "React components library focused on simplicity and ease of use",
    "repository": {
        "type": "github",
        "url": "https://github.com/ChillWoW/luminx",
        "directory": "packages/@luminx/core"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/style.css",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "build:tailwind": "tailwindcss -i ./src/style.css -o ./dist/style.css",
        "copy:css": "node ../../../scripts/copy-css.js",
        "build": "tsc && npm run build:tailwind && npm run copy:css",
        "pack": "npm run build && npm pack",
        "publish": "npm run build && npm publish"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "dependencies": {
        "@floating-ui/react": "^0.27.13",
        "@tabler/icons-react": "^3.34.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.6",
        "prism-react-renderer": "^2.4.1",
        "react-textarea-autosize": "^8.5.9",
        "tailwind-merge": "^3.0.2",
        "tailwind-scrollbar": "^3.1.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.8",
        "@rollup/plugin-node-resolve": "^15.3.1",
        "@rollup/plugin-typescript": "^11.1.6",
        "autoprefixer": "^10.4.0",
        "postcss": "^8.4.0",
        "postcss-cli": "^10.1.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "rollup": "^4.0.0",
        "rollup-plugin-dts": "^6.2.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
