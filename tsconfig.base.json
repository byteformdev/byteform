{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist"]
}
